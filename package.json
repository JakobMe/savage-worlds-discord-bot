{
  "name": "savage-worlds-discord-bot",
  "version": "1.0.0",
  "description": "Discord Chatbot f√ºr Savage Worlds",
  "author": "Jakob Metzger <jakob.me@gmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=13.0.0",
    "npm": ">=6.13.0"
  },
  "main": "src/index.js",
  "scripts": {
    "start": "ts-node src/index",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --config",
    "prettier": "prettier --write 'src/**/*.{js,ts,json}'",
    "lint": "eslint 'src/**/*.{js,ts,json}'"
  },
  "dependencies": {
    "@types/colors": "1.2.1",
    "@types/node": "13.11.1",
    "colors": "1.4.0",
    "discord.js": "12.2.0",
    "dotenv": "8.2.0",
    "moment": "2.24.0",
    "ts-node": "8.8.2",
    "typescript": "3.8.3"
  },
  "devDependencies": {
    "@types/jest": "25.2.1",
    "@typescript-eslint/eslint-plugin": "2.28.0",
    "@typescript-eslint/parser": "2.28.0",
    "eslint": "6.8.0",
    "jest": "25.3.0",
    "prettier": "2.0.4",
    "ts-jest": "25.4.0"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100,
    "trailingComma": "none",
    "arrowParens": "avoid"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "collectCoverageFrom": [
      "src/classes/**/*.ts",
      "src/commands/**/*.ts",
      "src/utils/**/*.ts"
    ],
    "roots": [
      "<rootDir>/test",
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "^.+\\.spec.ts",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  }
}
